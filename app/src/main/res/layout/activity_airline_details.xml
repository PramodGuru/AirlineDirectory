<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/iv_detail_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_flight_32"
        android:layout_margin="24dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_name"
        app:layout_constraintTop_toTopOf="@id/iv_detail_logo"
        app:layout_constraintBottom_toBottomOf="@id/iv_detail_logo"
        app:layout_constraintStart_toEndOf="@id/iv_detail_logo"
        android:text="@string/airline_name"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/iv_detail_website"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_logo"
        android:src="@drawable/ic_web_32"
        android:layout_margin="24dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_website"
        app:layout_constraintTop_toTopOf="@id/iv_detail_website"
        app:layout_constraintBottom_toBottomOf="@id/iv_detail_website"
        app:layout_constraintStart_toEndOf="@id/iv_detail_website"
        android:text="@string/website"
        android:layout_marginStart="12dp"
        android:textColorLink="@color/black"
        android:autoLink="web"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/iv_detail_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_website"
        android:src="@drawable/ic_phone_32"
        android:layout_margin="24dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_phone"
        app:layout_constraintTop_toTopOf="@id/iv_detail_phone"
        app:layout_constraintBottom_toBottomOf="@id/iv_detail_phone"
        app:layout_constraintStart_toEndOf="@id/iv_detail_phone"
        android:text="@string/phone"
        android:layout_marginStart="12dp"
        android:textColorLink="@color/black"
        android:autoLink="phone"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/iv_detail_alliance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_phone"
        android:src="@drawable/ic_group_32"
        android:layout_margin="24dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_alliance"
        app:layout_constraintTop_toTopOf="@id/iv_detail_alliance"
        app:layout_constraintBottom_toBottomOf="@id/iv_detail_alliance"
        app:layout_constraintStart_toEndOf="@id/iv_detail_alliance"
        android:text="@string/airline_alliance"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:autoLink="phone"/>

    <CheckBox
        android:layout_height="32dp"
        android:layout_width="32dp"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_alliance"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp"
        android:id="@+id/cb_detail_fav"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detail_fav"
        app:layout_constraintTop_toTopOf="@id/cb_detail_fav"
        app:layout_constraintBottom_toBottomOf="@id/cb_detail_fav"
        app:layout_constraintStart_toEndOf="@id/cb_detail_fav"
        android:text="@string/save_to_favourites"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
